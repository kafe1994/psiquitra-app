# Configuración de Base de Datos
DATABASE_URL=postgresql://postgres:password@localhost:5432/psychiatry_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=psychiatry_db
DB_USER=postgres
DB_PASSWORD=password

# Configuración de Autenticación
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-2024
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d

# Configuración del Servidor
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Configuración de CORS
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Configuración de Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de Email (para futuras funcionalidades)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuración de Producción (Railway)
# DATABASE_URL=postgresql://username:password@hostname:port/database
# JWT_SECRET=production-jwt-secret
# NODE_ENV=production